//ðŸ“Œ Perfect Number: Sum of its proper divisors equals the number.
Example: 6 â†’ 1 + 2 + 3 = 6 âœ…

#include <iostream>
using namespace std;

int main() {
    int n, sum = 0;
    cout << "Enter a number: ";
    cin >> n;

    for (int i = 1; i < n; i++) {
        if (n % i == 0)
            sum += i;
    }

    if (sum == n)
        cout << "Perfect Number" << endl;
    else
        cout << "Not a Perfect Number" << endl;

    return 0;
}
