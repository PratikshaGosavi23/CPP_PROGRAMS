#include <iostream>
#include <string>
using namespace std;

bool isVowel(char c) {
    return c=='a'||c=='e'||c=='i'||c=='o'||c=='u';
}

int main() {
    string s = "hellobeautifulworld";
    int k = 3;
    int count = 0, maxCount = 0;

    // first window
    for(int i=0; i<k; i++)
        if(isVowel(s[i])) count++;
    maxCount = count;

    // sliding window
    for(int i=k; i<s.size(); i++) {
        if(isVowel(s[i])) count++;
        if(isVowel(s[i-k])) count--;
        maxCount = max(maxCount, count);
    }

    cout << "Maximum vowels in substring of size " << k << " = " << maxCount;
}
